<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayout2"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome user"
            android:id="@+id/welcomeText"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Calendar"
            android:id="@+id/btnCal"
            android:layout_weight="0.14"
            android:layout_below="@+id/welcomeText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btnTasks" />

        <Button
            android:layout_width="126dp"
            android:layout_height="100dp"
            android:text="Tasks"
            android:id="@+id/btnTasks"
            android:layout_gravity="right"
            android:layout_weight="0.21"
            android:layout_alignTop="@+id/btnCal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personalize"
            android:id="@+id/btnPersonal"
            android:layout_alignBottom="@+id/btnCal"
            android:layout_toRightOf="@+id/btnCal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btnTasks" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Budget"
            android:id="@+id/btnBudget"
            android:layout_below="@+id/btnCal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>