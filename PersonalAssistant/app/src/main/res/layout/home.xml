<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#787377"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayout2"
        android:background="#414141"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome user"
            android:id="@+id/welcomeText"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_gravity="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/linearLayout2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:padding="5dp"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:background="#ffffff">

                <Button
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/calendar_icon"
                    android:text="Calendar"
                    android:id="@+id/btnCal"
                    android:background="#1CADC5"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:elevation="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/btnPersonal"
                    android:layout_alignEnd="@+id/btnPersonal"
                    android:layout_alignLeft="@+id/btnBudget"
                    android:layout_alignStart="@+id/btnBudget"
                    android:gravity="center|center_vertical|left"
                    android:textSize="20dp"
                    android:allowUndo="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:elevation="5dp"
                android:background="#ffffff">

                <Button
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="Budget"
                    android:drawableRight="@drawable/budget_icon"
                    android:id="@+id/btnBudget"
                    android:background="#1cadc5"
                    android:textColor="#ffffff"
                    android:layout_above="@+id/btnTasks"
                    android:layout_alignLeft="@+id/btnTasks"
                    android:layout_alignStart="@+id/btnTasks"
                    android:layout_alignTop="@+id/btnPersonal"
                    android:padding="10dp"
                    android:gravity="center|left"
                    android:layout_gravity="center"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:elevation="5dp"
                android:background="#ffffff">

                <Button
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="Auto Sleep"
                    android:drawableRight="@drawable/autosnooze_icon"
                    android:id="@+id/btnPersonal"
                    android:background="#1cadc5"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:layout_below="@+id/btnCal"
                    android:layout_alignRight="@+id/btnTasks"
                    android:layout_alignEnd="@+id/btnTasks"
                    android:gravity="center|left"
                    android:layout_toRightOf="@+id/btnBudget"
                    android:layout_toEndOf="@+id/btnBudget"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:elevation="5dp"
                android:background="#ffffff">

                <Button
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="Tasks"
                    android:drawableRight="@drawable/taskmanager_icon"
                    android:id="@+id/btnTasks"
                    android:background="#1cadc5"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:layout_below="@+id/btnPersonal"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|left"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>